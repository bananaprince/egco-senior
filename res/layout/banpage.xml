<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Red_Main"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner_bg"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/banpage_message1"
            style="@style/largeBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/banpage_message1" />

        <TextView
            android:id="@+id/banpage_reason"
            style="@style/smallBlackText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Reason" />
    </LinearLayout>

    <ImageView
        android:id="@+id/banpage_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/sorry_face400white" />

    <TextView
        android:id="@+id/banpage_message2"
        style="@style/mediumBlackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/rounded_corner_bg"
        android:text="@string/banpage_message2" />

</LinearLayout>